        "enabled": true
      },
      "properties": {
        "name": {
          "type": "string",
          "index": "analyzed",
          "analyzer": "lowercasespaceanalyzer",
          "tokenizer": "lowercase",
          "search_analyzer": "whitespace",
          "filter": [
            "lowercase"
          ],
          "store": true
        },
        "uid": {
          "type": "string",
          "index": "not_analyzed",
          "store": true
        },
        "title": {
          "type": "string",
          "index": "analyzed",
          "analyzer": "lowercasespaceanalyzer",
          "store": true
        }
      }
    }
  }
}